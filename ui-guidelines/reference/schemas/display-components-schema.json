{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "SAIL Display Components - Read-only display and visualization components",
  "version": "2.3.0",
  "components": {
    "a!richTextDisplayField": {
      "category": "display",
      "parameters": {
        "value": {
          "type": "Any Type",
          "validation": "Can only contain a!richTextItem, a!richTextIcon, a!richTextBulletedList, a!richTextNumberedList, or plain text"
        },
        "align": {
          "validValues": [
            "LEFT",
            "CENTER",
            "RIGHT"
          ]
        },
        "preventWrapping": {
          "type": "Boolean"
        },
        "labelPosition": {
          "validValues": [
            "ABOVE",
            "ADJACENT",
            "JUSTIFIED",
            "COLLAPSED"
          ]
        },
        "marginAbove": {
          "validValues": [
            "NONE",
            "EVEN_LESS",
            "LESS",
            "STANDARD",
            "MORE",
            "EVEN_MORE"
          ]
        },
        "marginBelow": {
          "validValues": [
            "NONE",
            "EVEN_LESS",
            "LESS",
            "STANDARD",
            "MORE",
            "EVEN_MORE"
          ]
        }
      },
      "description": "Formatted text display with styles, links, lists"
    },
    "a!stampField": {
      "category": "display",
      "parameters": {
        "text": {
          "type": "Text"
        },
        "backgroundColor": {
          "validValues": [
            "ACCENT",
            "POSITIVE",
            "NEGATIVE",
            "SECONDARY",
            "TRANSPARENT"
          ],
          "acceptsHexColors": true
        },
        "contentColor": {
          "type": "Text",
          "validValues": [
            "STANDARD",
            "ACCENT",
            "POSITIVE",
            "NEGATIVE"
          ],
          "acceptsHexColors": true
        },
        "size": {
          "validValues": [
            "TINY",
            "SMALL",
            "MEDIUM",
            "LARGE"
          ]
        },
        "shape": {
          "validValues": [
            "ROUNDED",
            "SEMI_ROUNDED",
            "SQUARED"
          ]
        },
        "labelPosition": {
          "validValues": [
            "ABOVE",
            "ADJACENT",
            "JUSTIFIED",
            "COLLAPSED"
          ]
        },
        "marginAbove": {
          "validValues": [
            "NONE",
            "EVEN_LESS",
            "LESS",
            "STANDARD",
            "MORE",
            "EVEN_MORE"
          ]
        },
        "marginBelow": {
          "validValues": [
            "NONE",
            "EVEN_LESS",
            "LESS",
            "STANDARD",
            "MORE",
            "EVEN_MORE"
          ]
        }
      },
      "description": "Icon and/or text on colored background"
    },
    "a!headingField": {
      "category": "display",
      "parameters": {
        "text": {
          "type": "Text"
        },
        "size": {
          "validValues": [
            "LARGE_PLUS",
            "LARGE",
            "MEDIUM_PLUS",
            "MEDIUM",
            "SMALL",
            "EXTRA_SMALL"
          ]
        },
        "headingTag": {
          "type": "Text",
          "validValues": [
            "H1",
            "H2",
            "H3",
            "H4",
            "H5",
            "H6"
          ]
        },
        "color": {
          "validValues": [
            "ACCENT",
            "STANDARD",
            "SECONDARY"
          ],
          "acceptsHexColors": true
        },
        "fontWeight": {
          "type": "Text",
          "validValues": [
            "LIGHT",
            "NORMAL",
            "SEMI_BOLD",
            "BOLD",
            "EXTRA_BOLD"
          ]
        },
        "marginAbove": {
          "validValues": [
            "NONE",
            "EVEN_LESS",
            "LESS",
            "STANDARD",
            "MORE",
            "EVEN_MORE"
          ]
        },
        "marginBelow": {
          "validValues": [
            "NONE",
            "EVEN_LESS",
            "LESS",
            "STANDARD",
            "MORE",
            "EVEN_MORE"
          ]
        }
      },
      "description": "Styled heading text with accessibility support"
    },
    "a!progressBarField": {
      "category": "display",
      "parameters": {
        "percentage": {
          "type": "Integer"
        },
        "color": {
          "validValues": [
            "ACCENT",
            "POSITIVE",
            "NEGATIVE",
            "WARN"
          ],
          "acceptsHexColors": true
        },
        "style": {
          "validValues": [
            "THIN",
            "THICK"
          ]
        },
        "showPercentage": {
          "type": "Boolean"
        },
        "labelPosition": {
          "validValues": [
            "ABOVE",
            "ADJACENT",
            "JUSTIFIED",
            "COLLAPSED"
          ]
        },
        "marginAbove": {
          "validValues": [
            "NONE",
            "EVEN_LESS",
            "LESS",
            "STANDARD",
            "MORE",
            "EVEN_MORE"
          ]
        },
        "marginBelow": {
          "validValues": [
            "NONE",
            "EVEN_LESS",
            "LESS",
            "STANDARD",
            "MORE",
            "EVEN_MORE"
          ]
        }
      },
      "description": "Progress bar showing completion percentage"
    },
    "a!tagField": {
      "category": "display",
      "parameters": {
        "tags": {
          "type": "List of Variant"
        },
        "size": {
          "validValues": [
            "SMALL",
            "STANDARD"
          ]
        },
        "align": {
          "validValues": [
            "START",
            "CENTER",
            "END"
          ]
        },
        "labelPosition": {
          "validValues": [
            "ABOVE",
            "ADJACENT",
            "JUSTIFIED",
            "COLLAPSED"
          ]
        },
        "marginAbove": {
          "validValues": [
            "NONE",
            "EVEN_LESS",
            "LESS",
            "STANDARD",
            "MORE",
            "EVEN_MORE"
          ]
        },
        "marginBelow": {
          "validValues": [
            "NONE",
            "EVEN_LESS",
            "LESS",
            "STANDARD",
            "MORE",
            "EVEN_MORE"
          ]
        }
