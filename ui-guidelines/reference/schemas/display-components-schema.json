    "a!linkField": {
      "category": "display",
      "parameters": {
        "links": {
          "type": "Any Type"
        },
        "align": {
          "validValues": [
            "LEFT",
            "CENTER",
            "RIGHT"
          ]
        },
        "labelPosition": {
          "validValues": [
            "ABOVE",
            "ADJACENT",
            "JUSTIFIED",
            "COLLAPSED"
          ]
        }
      },
      "description": "Displays a list of clickable links"
    },
    "a!recordActionField": {
      "category": "display",
      "parameters": {
        "actions": {
          "type": "List of a!recordActionItem",
          "description": "Record action items to display"
        },
        "style": {
          "validValues": [
            "TOOLBAR",
            "LINKS",
            "CARDS",
            "SIDEBAR",
            "CALL_TO_ACTION",
            "MENU",
            "MENU_ICON",
            "TOOLBAR_PRIMARY",
            "SIDEBAR_PRIMARY"
          ]
        },
        "display": {
          "validValues": [
            "LABEL",
            "ICON",
            "LABEL_AND_ICON"
          ]
        },
        "openActionsIn": {
          "validValues": [
            "DIALOG",
            "NEW_TAB",
            "SAME_TAB"
          ]
        },
        "align": {
          "validValues": [
            "START",
            "CENTER",
            "END"
          ]
        },
        "securityOnDemand": {
          "type": "Boolean"
        }
      },
      "description": "Displays record actions in various configurable styles"
    },
    "a!imageField": {
      "category": "display",
